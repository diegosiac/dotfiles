{
    "layer": "top",
    "position": "top",
    //"mode": "dock",
    "exclusive": "true",
    "passthrough": "false",
    "height": "20",
    "gtk-layer-shell": true,

    "modules-left": ["custom/launcher", "custom/divider", "cpu", "custom/divider", "memory", "custom/divider", "network", "custom/divider", "battery"],
    "modules-center": ["clock"],
    "modules-right": ["custom/updates", "custom/divider", "backlight", "custom/divider", "pulseaudio", "custom/divider", "custom/temp", "custom/divider", "bluetooth", "tray"],

    "clock": {
        "format": " {:%a, %e %b, %I:%M %p }"
    },
    
    "custom/gpu-usage": {
        "exec": "radeontop -d --limit 1 -i 4 - | cut -c 32-35 -",
        "format": "{}% Ôãõ GPU",
        "return-type": "",
        "interval": 4
    },

    "custom/launcher": {
        "tootltip": false,
        "format" : " ü¶Å",
        "on-click": "killall wofi || wofi --show drun -n",
        "on-click-right": "killall wofi"
    },

    "cpu": {
        "interval": 30,
        "format" : "Ôíº  {}%",
        "max-length": 10
    },

    "memory": {
        "interval": 1,
        "format": "ÓÆÑ {}%",
        "max-length": 30
    },

    "network": {
        "interval": 100,
        //"interface": "wlp2s0",
        "format": "{ifname}",
        "format-wifi": "Ôá´ {essid} ({signalStrength}%) ",
        "format-ethernet": "Ôûñ {ipaddr}/{cidr} ",
        "format-disconnected": "Disconnected ", //An empty format will hide the module.
        "tooltip-format": "Ôûñ{ifname} via {gwaddr}",
        "tooltip-format-wifi": "Ôá´ {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "ÔÉÅ {ifname}",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "exec": "kitty -e nmcli dev wifi "
    },

    "custom/updates":{
        "format": " {} Update(s)",
        "exec": "checkupdates | wc -l",
        //"exec-if": "[[ $(checkupdates | wc -l) != 0 ]]",
        "interval": 200,
        "on-click": "kitty -e sudo pacman -Syyu && notify-send 'The system has been updated' "
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"],
        "on-scroll-up": "brightnessctl set 5%+",
        "on-scroll-down": "brightnessctl set 5%-",
        "min-length": 6
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "ÔÄ¶ Muted",
        "on-click": "pamixer -t",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon}  {capacity}% ",
        "format-charging": "Ôá¶ {capacity}% ",
        "format-plugged": "Ôá¶ {capacity}% ",
        "format-alt": "{time} {icon} ",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

	"tray":{
		"icon-size":18,
		"spacing": 10
	},

	"custom/temp": {
        "exec": "$HOME/.config/waybar/temp.py",
        "format": "{}",
        "tooltip": true,
        "interval": 20

    },

    "bluetooth": {
	    "format": "Ôäî {status} ",
	    "format-connected": "Ôäî {num_connections} ",
	    "tooltip-format": "{device_alias} ",
	    "tooltip-format-connected": "Ôäî {device_enumerate} ",
	    "tooltip-format-enumerate-connected": "{device_alias} "
    }, 

    "custom/divider": {
        "format": "|"
    }
}
